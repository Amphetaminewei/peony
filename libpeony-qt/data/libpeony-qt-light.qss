Peony--DirectoryView--IconView
{
    margin: 0px;
    border: 0px;
    padding-top: 10px;
    padding-left: 5px;
    background-color: white;
    font: 16px;
    color: black;
}

Peony--DirectoryView--IconView::Item
{
    padding-top: 10px;
    padding-bottom: 10px;
    image-position: bottom;
}

Peony--DirectoryView--IconView::Item::hover
{
    background: #cfe6fd;
    color: black;
}

Peony--DirectoryView--IconView::Item::selected{
    background: #bfd6f7;
    color: black;
}
